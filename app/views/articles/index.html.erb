<%content_for :title, "Articles"%>
<h1>Showing articles</h1>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td><%= article.id %></td>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td>SHOW | EDIT | REMOVE<td>
    </tr>
    <% end %>
  </tbody>
</table>